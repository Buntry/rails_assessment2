<!DOCTYPE html>
<html>
<head>
  <title>RailsAssessment2</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id='wrapper'>
	
	<% if signed_in? %>
		<div class='nav'>
			<nav class='left'>
				<p><%= link_to 'Recipes', recipes_path %></p>
				<p><%= link_to 'Ingredients' %></p>
				<p><%= link_to 'Users', users_path %></p>
			</nav>
			<nav class='right'>
				<p><%= current_user.name %></p>
				<p><%= link_to 'Logout', logout_path %></p>
			</nav>
		</div>	
	<% else %>
		<div class='nav'>
			<nav class='left'>
				<p><%= link_to 'Home', root_path %></p>
				<p><%= link_to 'Sign Up', new_user_path %></p>
				<p><%= link_to 'Login', login_path %></p>
				<p><%= link_to 'Facebook', '/auth/facebook' %></p>
			</nav>
			<nav class='right'>
				<p><a href='https://www.github.com/Buntry'>Site by Parker Griep</a></p>
			</nav>
	<% end %>
	
	<div class='container'>
		<div id='alert_field'>
			<% flash_alerts.each do |alert| %>
				<%= alert %>
			<% end %>
		</div>
		
		<hr>

		<%= yield %>
	</div>
	
</div>

</body>
</html>
